
	;; -*- asm -*-

	;; Return last received byte or wait until a byte is received and return
	;; it. FIXME: should not wait here. This is up to the application.
	;;
	.global		LABEL(getbyte)
	.section	.text.LABEL(getbyte),"ax",@progbits
LABEL(getbyte):
	.if DBG_GETBYTE
	sbi	DBGPORT, DBGBIT
	.endif

1:	XSBIS	R24, F_RXC
	rjmp	1b

	XCBAS	R24, R25, F_RXC

	lds	R24, data

	.if DBG_GETBYTE
	cbi	DBGPORT, DBGBIT
	.endif
	ret
