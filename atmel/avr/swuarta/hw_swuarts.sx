#include "../avrx.sx"


/*	Create a label
 */
#undef LABEL
#define LABEL(x)		HW_G3(_hw,UART,x)

/*	Create a data
 */
#undef DATA
#define DATA(x)			HW_G3(__hw,UART,x)


/*	hw_swuart0
 */
#if defined hw_swuart0_pin_txd || defined hw_swuart0_pin_rxd
