#  undef AUTOSYNC
#  if defined hw_swuart0_autosync
#    define AUTOSYNC		1
#  endif
#  include "swuarta.sx"
#endif

/*	hw_swuart1
 */
#if defined hw_swuart1_pin_txd || defined hw_swuart1_pin_rxd
#  undef UART
#  define UART			swuart1
#  undef AUTOSYNC
#  if defined hw_swuart1_autosync
#    define AUTOSYNC		1
#  endif
#  include "swuarta.sx"
#endif
