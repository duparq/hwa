
define connect
  target remote localhost:3333
end

define reload
#  mon reset
#  mon halt
  mon reset halt
#  mon reset init
  load PROJECT

  # Vector table is in RAM
  # monitor mdw 0xE000ED08 1
  #
  monitor mww 0xE000ED08 0x20000000

  # Pour booter correctement en RAM (STM32 bug)
  # si le vecteur d'interruptions n'est pas modifi√©
  #
  # monitor mww 0x20000108 0xf108f85f

  set $sp = *(int*)0x20000000
  set $pc = *(int*)0x20000004

  echo VECTORS =\ 
  print /x *0xE000ED08
  echo SP =\ 
  print /x $sp
  echo PC =\ 
  print /x $pc
end

define hook-step
  mon cortex_m3 maskisr on
end

define hookpost-step
  mon cortex_m3 maskisr off
end

connect
reload

